<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/griadent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center">
                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/left_02"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@mipmap/user_03"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/imageView3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/lnl_main_home"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center">
                <View
                    android:background="@mipmap/left_02"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_main_home"
                    />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_main_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home"/>
                    <TextView
                        android:id="@+id/txt_main_home"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_index"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_main_contacts"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center">
                <View
                    android:background="@mipmap/left_02"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_main_contacts"
                    />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_main_contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/contacts"/>
                    <TextView
                        android:id="@+id/txt_main_contacts"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_contacts"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_main_courseware"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center">
                <View
                    android:background="@mipmap/left_02"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_main_courseware"
                    />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_main_courseware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/courseware"/>
                    <TextView
                        android:id="@+id/txt_main_courseware"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_courseware"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center">
                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/left_02"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@mipmap/bottom_03"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>







    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lnl_main_content"
        android:layout_weight="9"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
