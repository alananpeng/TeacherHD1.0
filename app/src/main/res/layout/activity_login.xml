<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanboard.teacherhd.android.activity.LoginActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="122dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_logo_03"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_pad_03"/>
        <LinearLayout
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@drawable/login_border_line_bg"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR CODE"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="#8ac1f9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <com.hanboard.teacherhd.common.view.ClearEditText
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="@string/login_user_name"
                android:textColorHint="#cccccc"
                android:textSize="13dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/usericon_03"
                android:background="@drawable/login_edt_bg"
                android:id="@+id/edt_loging_username"/>
            <View
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <EditText
                android:id="@+id/edt_loging_pwd"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="#cccccc"
                android:textSize="13dp"
                android:hint="@string/login_user_pwd"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/login_edt_bg"
                android:drawableLeft="@mipmap/pwdicon_03"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/kuxiao_03"
                    android:id="@+id/imageView5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView5" />
            </RelativeLayout>
            <Button
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/btn_login"
                android:layout_marginBottom="30dp"
                android:background="@drawable/login_btn_bg"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
