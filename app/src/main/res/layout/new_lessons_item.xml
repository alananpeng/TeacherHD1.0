<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:background="#00000000">
   <TextView
       android:gravity="center"
       android:text="1.2.1声音的传播和特性"
       android:textSize="18dp"
       android:textColor="@color/white"
       android:id="@+id/new_lessons_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@mipmap/new_lesson_item_header_05"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/new_lessons_item_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:padding="10dp"
                android:textColor="#38638e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"/>
            <TextView
                android:textColor="#38638e"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目："/>
            <TextView
                android:id="@+id/new_lessons_subject"
                android:textColor="#38638e"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物理"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:padding="10dp"
                android:textColor="#38638e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"/>
            <TextView
                android:textColor="#38638e"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授课对象："/>
            <TextView
                android:id="@+id/new_lessons_suitobject"
                android:textColor="#38638e"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三年级二班"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:padding="10dp"
                android:textColor="#38638e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"/>
            <TextView
                android:textColor="#38638e"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课时："/>
            <TextView
                android:id="@+id/new_lessons_courseHour"
                android:textColor="#38638e"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"/>
            <TextView
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间："/>
            <TextView
                android:id="@+id/new_lessons_createtime"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-6-5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
