<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diglog_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="#edf9ff">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:elevation="4dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/left_top_03"
                    android:textColor="@color/white"
                    android:text="选择学科"/>
                <com.hanboard.teacherhd.common.view.WheelView
                    android:id="@+id/wlw_select_textbook_subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.hanboard.teacherhd.common.view.WheelView>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#f0f0f0"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:elevation="4dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/right_top_03"
                    android:textColor="@color/white"
                    android:text="选择年级"/>
                <com.hanboard.teacherhd.common.view.WheelView
                    android:id="@+id/wlw_select_textbook_grade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.hanboard.teacherhd.common.view.WheelView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="1">
            <View
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f0f0f0"/>
            <GridView
                android:numColumns="2"
                android:id="@+id/gd_select_textbook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00">
            </GridView>
            <TextView
                android:id="@+id/txt_select_textbook_search"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:background="@mipmap/xuanzhejiaocaodibu_06"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
