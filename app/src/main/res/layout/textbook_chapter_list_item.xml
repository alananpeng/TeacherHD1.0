<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/textbook_chapter_container"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/textbook_chapter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/noet"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/textbook_chapter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="mjdsahdj"/>
        <ImageView
            android:id="@+id/textbook_chapter_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/tree_ec"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"></View>
</LinearLayout>