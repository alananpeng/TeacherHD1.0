<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/textbook_item_bg">
        <ImageView
            android:id="@+id/textbook_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/textbook_icon_03"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textbook_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教材版本：人教版（上）"/>
            <TextView
                android:id="@+id/textbook_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出版日期：2016.6"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
